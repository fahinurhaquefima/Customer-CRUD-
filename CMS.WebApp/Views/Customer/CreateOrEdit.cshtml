@model CMS.WebApp.Models.Customer

@{
}

<div class="text-center">
    <h3 class="text-warning text-uppercase fs-2">Teacher Registration Form</h3>
    <p class="fs-5">Fill out the form carefully for registration</p>
</div>

<div class="container"> 
    
        <form asp-action="CreateOrEdit" asp-controller="Customer" method="post">
            <div class="row">
                <div class="col-md-6 mt-3">
                   <label class="form-label"></label>
                   <input type="text" placeholder="Enter Your Name" />
                   <span asp-validation-for="Name"></span>
                </div>

                <div class="col-md-6 mt-3" >
                    <label class="form-label"></label>
                    <input type="email" placeholder="Enter Your Email Address" />
                    <span asp-validation-for="Email"></span>
                </div>
             
                <div class="col-6 mt-3"> 
                    <label class="form-label"></label>
                    <input type="number" placeholder="Send Your Phone Number" />
                    <span asp-validation-for="Phone"></span>
                </div>

                <div class="col-6 mt-3">
                   <label class="form-label"></label>
                   <input type="text" placeholder="Enter Your Current Address" />
                   <span asp-validation-for="Address"></span>
                </div>
            </div>
        </form>
    
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}